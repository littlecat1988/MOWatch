        android:key="connetion_status"
        android:title="@string/device" 
        android:dividerHeight="0px" >
        <com.mtk.main.CustomPreference
            android:key="app_info"
            android:selectable="true" />
        <com.mtk.main.FindMePreference
            android:key="find_me" />
