<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff123456"
    android:scrollbars="none" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/main_ur_height"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="20.0dip"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/personal_information"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="1.0dip"
                android:layout_weight="2.0"
                android:background="@drawable/bg5_ui" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/icon_home_device" />
            </RelativeLayout>

             <LinearLayout
                android:id="@+id/temp_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="1.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:background="@drawable/bg_ui"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7.5dip" >

                    <TextView
                        android:id="@+id/city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="深圳"
                        android:textColor="@android:color/white"
                        android:textSize="17.0sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/pm2_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:text="PM2.5:"
                        android:visibility="gone"
                        android:textColor="@android:color/white"
                        android:textSize="14.0sp" />

                    <TextView
                        android:id="@+id/weather"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3.0dip"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="17.0sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3.0dip"
                    android:layout_marginTop="5.0dip"
                    android:text="32~27°C"
                    android:visibility="gone"
                    android:textColor="@android:color/white"
                    android:textSize="17.0sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/main_gps_height"
            android:layout_marginTop="2.0dip"
            android:layout_marginBottom="2.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/bg_ui_time">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <DigitalClock
                    android:id="@+id/digitalClock1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DigitalClock"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/size_clock" />
                
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text=""
                android:textColor="#ffffffff"
                android:textSize="@dimen/icon_text_size" />
                
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/main_gps_height"
            android:id="@+id/layout_location"
            android:layout_marginTop="2.0dip"
            android:layout_marginBottom="2.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/home_bg_location">


            <ImageView
                android:id="@+id/imageView_binding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10.0px"
                android:src="@drawable/icon_binding" />

            <TextView
                android:id="@+id/textView_binding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:lines="1"
                android:text="@string/binding"
                android:textColor="@android:color/white"
                android:textSize="@dimen/icon_text_size" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/main_sport_height"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="3.0dip"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/layout_sports"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="1.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/bg1_ui" >

                <ImageView
                    android:id="@+id/imageView_sports"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_sports" />

                <TextView
                    android:id="@+id/textView_sport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView_sports"
                    android:layout_centerHorizontal="true"
                    android:text="@string/sport"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/icon_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_hr"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/bg2_ui" >

                <ImageView
                    android:id="@+id/imageView_hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/heartrate" />

                <TextView
                    android:id="@+id/textView_hr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView_hr"
                    android:layout_centerHorizontal="true"
                    android:text="@string/heartrate"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/icon_text_size" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/main_sleep_height"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="3.0dip"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/layout_setting"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="1.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/bg9_ui"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/setting_ble" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/imageView_setting"
                    android:layout_centerHorizontal="true"
                    android:text="@string/setting"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/icon_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_sleep"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1.0dip"
                android:layout_marginRight="1.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/bg3_ui"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView_sleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_sleep" />

                <TextView
                    android:id="@+id/textView_sleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView_sleep"
                    android:layout_centerHorizontal="true"
                    android:text="@string/sleep"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/icon_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_radar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="1.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/bg4_ui" >

                <ImageView
                    android:id="@+id/imageView_radar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_radar" />

                <TextView
                    android:id="@+id/textView_radar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView_radar"
                    android:layout_centerHorizontal="true"
                    android:text="@string/anti_lost"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/icon_text_size" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
    <FrameLayout android:id="@+id/adcontainer"
                 android:layout_width="fill_parent" android:layout_height="wrap_content"
                 android:layout_gravity="bottom">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete"
            android:background="@drawable/delete"
            android:layout_gravity="right|top"/>
    </FrameLayout>
    </FrameLayout>