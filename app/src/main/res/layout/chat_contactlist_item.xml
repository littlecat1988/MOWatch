<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
   <ImageView
        android:id="@+id/chat_head_img"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/groups_icon"
        />
   
     <TextView
         android:id="@+id/chat_nickname"
         android:layout_width="wrap_content"
         android:layout_height="50dp"
         android:layout_marginLeft="5dp"
         android:layout_alignBottom="@+id/chat_head_img"
         android:layout_alignParentTop="true"
         android:layout_toRightOf="@+id/chat_head_img"
         android:gravity="center"
         android:text="GG"
          />

     <TextView
         android:id="@+id/chat_phone"
         android:layout_width="wrap_content"
         android:layout_height="50dp"
         android:layout_alignBottom="@+id/chat_nickname"
         android:layout_alignParentTop="true"
         android:layout_toRightOf="@+id/chat_nickname"
         android:gravity="center"
         android:text="135xxxxxxxx"
         android:textColor="@color/color_gray" />

     <TextView
         android:id="@+id/isRead"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_alignRight="@+id/chat_head_img"
         android:background="@drawable/unread_count_bg"
         android:gravity="center"
         android:text="1"
         android:textColor="@android:color/white"
         android:textSize="12sp"
         android:visibility="invisible" />

</RelativeLayout>
