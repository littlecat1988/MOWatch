<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_info_bg"
    android:orientation="vertical" >

    <include layout="@layout/head_public" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="2" >

            <care.widget.CircularImage
                android:id="@+id/register_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                
                android:src="@drawable/user_head_normal" />

            <LinearLayout
                android:id="@+id/linear_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="10dp" 
                android:orientation="horizontal"
                >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_nan_id"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_photo"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/linear_center"
                android:background="@drawable/sex_select_left_btn"
                android:padding="5dp"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/nan_btn_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/sex_nan_n"
                    android:background="@android:color/transparent" />

                <ImageButton
                    android:id="@+id/nan_select_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/sex_select" 
                    android:background="@android:color/transparent"
                    android:visibility="invisible"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_nv_id"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_photo"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:layout_toRightOf="@id/linear_center"
                android:background="@drawable/sex_select_right_btn"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/nv_btn_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/sex_nv_n" 
                    android:background="@android:color/transparent"/>

                <ImageButton
                    android:id="@+id/nv_select_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/sex_select" 
                    android:background="@android:color/transparent"
                    android:visibility="invisible"/>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="@drawable/my_info_bg"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/edit_id"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="30dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/transparent"
                    android:text="@string/nicheng_string" />

                <TextView
                    android:id="@+id/user_name_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:text="我是张三" />
                
                <ImageButton                          
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/xcm_button_edit" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/transparent"
                    android:text="@string/phone_string" />

                <TextView
                    android:id="@+id/user_phone_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:text="我是小熊" />
                
                <!-- <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="20dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/xcm_button_edit" /> -->
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_gray" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:orientation="vertical" >

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical" >

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
