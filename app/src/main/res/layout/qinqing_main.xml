<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/head_public" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:gravity="bottom|center" >

        <care.widget.CircularImage
            android:id="@+id/device_img"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:src="@drawable/device_head_normal" />

        <ImageView
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:background="#656555"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dip"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="15dip" >

            <TextView
                android:id="@+id/device_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小熊"
                android:textColor="@color/qinqing_text2_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/device_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="电话号码:"
                android:textColor="@color/qinqing_text1_color"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="15dip"
        android:text="@string/qingqing_text1"
        android:textColor="@color/qinqing_text1_color"
        android:textSize="16sp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="4dip"
                android:background="@color/color_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60dip" >

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="25dip"
                    android:layout_weight="4" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dip"
                        android:text="@string/qingqing_text2"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <ImageButton
                        android:id="@+id/relative_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:src="@drawable/qinqing_add" />
                </LinearLayout>
            </LinearLayout>

            <ListView
                android:id="@+id/relatives_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dip"
                android:dividerHeight="0dip"
                android:fadingEdge="none"
                android:padding="5dip" >
            </ListView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dip"
                android:layout_marginTop="30dip"
                android:text="@string/qingqing_text3"
                android:textColor="@color/qinqing_text3_color"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginTop="15dip"
                android:background="@color/color_gray" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60dip" >

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="25dip"
                    android:layout_weight="4" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dip"
                        android:text="@string/qingqing_text4"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical" >

                    <ImageButton
                        android:id="@+id/friend_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:src="@drawable/qinqing_add" />
                </LinearLayout>
            </LinearLayout>

            <ListView
                android:id="@+id/friend_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="0dip"
                android:fadingEdge="none" >
            </ListView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="40dip"
                android:layout_marginTop="30dip"
                android:text="@string/qingqing_text5"
                android:textColor="@color/qinqing_text3_color"
                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
