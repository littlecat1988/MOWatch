<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView android:id="@+id/warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/warning_text"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:textStyle="bold"/>
    
    <TextView android:id="@+id/warning_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/warning"
        android:text="@string/warning_content_text"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="#000000"/>
    
    <LinearLayout android:id="@+id/version_linear_layout"
        android:layout_below="@id/warning_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        
        <TextView android:id="@+id/new_version_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version_text"
            android:textColor="#000000"
            android:textStyle="bold"/>
        
        <TextView android:id="@+id/new_version_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"/>
        
    </LinearLayout>
    
    <LinearLayout android:id="@+id/release_note_linear_layout"
        android:layout_below="@id/version_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        
        <TextView android:id="@+id/release_note_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/release_note_text"
            android:textColor="#000000"
            android:textStyle="bold"/>
        
        <TextView android:id="@+id/release_note_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"/>
        
    </LinearLayout>

</RelativeLayout>
